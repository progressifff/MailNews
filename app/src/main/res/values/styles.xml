<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="iconColor">@color/iconColorLight</item>
        <item name="android:buttonStyle">@style/LightColoredButtonStyle</item>
    </style>

    <style name="LightColoredButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">?attr/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
